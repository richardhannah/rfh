{
  "name": "cucumber-testing",
  "version": "1.0.0",
  "description": "This directory contains Behavior-Driven Development (BDD) test scenarios written in Cucumber/Gherkin format for the RFH (RuleStack File Handler) CLI tool.",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --fail-fast",
    "test:init": "cucumber-js features/01-init-*.feature --fail-fast",
    "test:working": "cucumber-js features/01-init-empty-directory.feature --fail-fast",
    "test:actual": "cucumber-js features/01-init-empty-directory.feature --format progress --fail-fast",
    "test:full": "cucumber-js",
    "test:full:init": "cucumber-js features/01-init-*.feature",
    "test:full:working": "cucumber-js features/01-init-empty-directory.feature",
    "test:full:actual": "cucumber-js features/01-init-empty-directory.feature --format progress"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "chai": "^6.0.1",
    "fs-extra": "^11.3.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "tar": "^7.4.3",
    "toml": "^3.0.0"
  }
}
